<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Create Listing</h2>
			<%= form_for(@listing, class: 'form-horizontal') do |u| %>
				<fieldset>
					<div class = "form-group">	
						<%= u.label :name %>
						<%= u.text_field :name, class: "form-control"  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :msrp %>
						<%= u.text_field :msrp, class: "form-control"  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :new %>
						<%= u.check_box :new %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :featured %>
						<%= u.check_box :featured  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :link %>
						<%= u.text_field :link, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :image_name %>
						<%= u.text_field :image_name, class: "form-control"  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :description %>
						<%= u.text_area :description, class: "form-control"  %>	
					</div>

					<div class = "form-group">
						<%= u.submit(class: "btn btn-primary btn-sm") %>
					</div>
				</fieldset>
			<% end %> 
		</div>
	</div>
</div>



